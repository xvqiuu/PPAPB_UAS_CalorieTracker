<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:padding="25dp"
    android:background="@color/oceanblue">

    <TextView
        android:id="@+id/txt_welcome"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamar Datang di"
        android:textColor="@color/white"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txt_nama_aplikasi"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Kalori Kehidupan"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/txt_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/icon_welcome"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/calculator"
        app:layout_constraintTop_toBottomOf="@+id/txt_nama_aplikasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.02"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Kalori Kehidupan adalah aplikasi yang membantu pengguna memonitoring asupan kalori setiap harinya. Ini memungkinkan pengguna untuk mencatat makanan dan minuman yang mereka konsumsi, melakukan perhitungan kalori, dan mengatur tujuan kesehatan seperti penurunan berat badan atau pemantauan kesehatan secara umum. "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="13sp"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/icon_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.02"
        android:layout_marginTop="35dp"
        />

    <Button
        android:id="@+id/btn_mulai"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mulai"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.02"
        android:layout_marginTop="50dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>