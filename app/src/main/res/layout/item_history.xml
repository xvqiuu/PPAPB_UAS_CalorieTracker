<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/oldblue"
        >

        <TextView
            android:id="@+id/txt_nama_makanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Nama"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/txt_jam_makan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nama_makanan"
            android:layout_marginTop="15dp"
            android:text="Jam Makan"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/txt_jumlah_kalori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Jumlah Kalori"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/txt_nama_makanan"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="135dp"
            android:textSize="18dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>