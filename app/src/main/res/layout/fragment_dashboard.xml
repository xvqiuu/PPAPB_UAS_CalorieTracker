<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/txt_view_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halaman Utama"
            style="@style/Title"
            android:layout_marginBottom="15dp"
            android:textColor="@color/oldblue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <HorizontalScrollView
            android:id="@+id/sc_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/oldblue"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_dashboard"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Kartu pertama -->
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:background="@drawable/bakso"
                        android:orientation="vertical"
                        >

                        <!-- Isi kartu -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Bakso"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppinsmedium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="51dp"
                            android:layout_margin="10dp"
                            android:text="Jumlah Kalori: 444 kkal"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kartu kedua -->
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:background="@drawable/nasgor"
                        android:orientation="vertical">

                        <!-- Isi kartu -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Nasi Goreng"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Jumlah Kalori: 267 kkal"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kartu ketiga -->
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:background="@drawable/soto"
                        android:orientation="vertical">

                        <!-- Isi kartu -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Soto Ayam"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Jumlah Kalori: 250 kkal"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppinsmedium"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Kartu keempat -->
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:background="@drawable/naspad"
                        android:orientation="vertical">

                        <!-- Isi kartu -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Nasi Padang"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppinsmedium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Jumlah Kalori: 500 kkal"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppinsmedium"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kartu kelima -->
                <androidx.cardview.widget.CardView
                    android:layout_width="170dp"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:background="@drawable/sate"
                        android:orientation="vertical">

                        <!-- Isi kartu -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Sate Ayam"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppinsmedium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Jumlah Kalori: 383 kkal"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppinsmedium"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_txt_view_sisa_kalori"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:textAlignment="center"
            android:background="@color/oceanblue"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sc_menu">

            <TextView
                android:id="@+id/txt_view_sisa_kalori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:text="Sisa Kalori"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>