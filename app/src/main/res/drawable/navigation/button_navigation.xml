<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.travelapp.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"
        />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.travelapp.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile"
        />

    <fragment
        android:id="@+id/ticketFragment"
        android:name="com.example.travelapp.TicketFragment"
        android:label="fragment_ticket"
        tools:layout="@layout/fragment_ticket" >
        <action
            android:id="@+id/action_ticketFragment_to_orderFragment4"
            app:destination="@id/orderFragment" />
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.example.travelapp.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order"
        >
        <action
            android:id="@+id/action_orderFragment_to_typeFragment"
            app:destination="@id/typeFragment" />
    </fragment>
    <fragment
        android:id="@+id/typeFragment"
        android:name="com.example.travelapp.TypeFragment"
        android:label="fragment_type"
        tools:layout="@layout/fragment_type" />

</navigation>